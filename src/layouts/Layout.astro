---
import "../styles/index.scss"
import { pub, unpub } from "../script/config"
import Link from "../components/Link.astro"

interface Props {
    title?: string
}

const prefix = "Performance"

const title = Astro.props.title ? `${prefix} - ${Astro.props.title}` : prefix
---

<!doctype html>
<html lang="de" class="bg-ctp-base text-ctp-text accent-ctp-mauve dark:ctp-mocha">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="HHN Vorlesung Performance-Optimierung" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href={pub("/favicon.svg")} />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        {
            unpub(Astro.url.pathname) === "" ? null : (
                <nav>
                    <Link href={pub("/")} class="block px-2 py-4 text-xl text-ctp-mauve underline">
                        Zur√ºck zur Hauptseite
                    </Link>
                </nav>
            )
        }
        <main class="mx-auto my-24 max-w-[1040px] px-2">
            <h1>{Astro.props.title || prefix}</h1>
            <slot />
        </main>
    </body>
</html>
